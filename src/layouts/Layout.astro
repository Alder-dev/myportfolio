---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Porfolio - Alder Andrés - Desarrollador</title>
  </head>
  <body class="relative bg-neutral-950 text-white min-h-screen flex flex-col overflow-x-hidden">
    <!-- Fondo radial decorativo -->
    <div
      class="absolute inset-0 -z-10 w-full h-full bg-[radial-gradient(ellipse_100%_80%_at_50%_0%,rgba(20,100,150,0.3),transparent)]"
    >
    </div>

    <!-- Header -->
    <Header />

    <!-- Contenido dinámico -->
    <main
      class="flex-grow w-full px-4 sm:px-6 md:px-8 xl:px-0 xl:max-w-[1120px] mx-auto"
    >
      <slot />
    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
